[flake8]
max-line-length = 88
extend-ignore = E203,W503,F401,F403,F541,F841,F601,D100,D101,D102,D103,D104,D105,D200,D205,D400,D401,D406,D407,D419
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # Allow star imports in __init__.py files
    __init__.py:F401,F403
    # Allow unused imports in test files
    test_*.py:F401
    # Ignore complex functions and line lengths in sub/ directory (legacy code)
    epyr/sub/*:C901,E501,D410,D411
    # Ignore duplicate keys in parameter mapping (intentional for different contexts)
    epyr/fair/parameter_mapping.py:F601
    # Allow longer lines in specific files (scientific constants, etc.)
    epyr/constants.py:E501,E402
    epyr/eprload.py:E501
    epyr/baseline/*:E501
    epyr/fair/*:E501,C901
    epyr/fair_original_backup.py:E501,C901
    epyr/isotope_gui.py:E501
    epyr/isotope_gui/*:E722
    epyr/plot.py:E501
max-complexity = 25
docstring-convention = numpy
